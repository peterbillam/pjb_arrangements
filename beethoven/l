#! /usr/bin/perl

chdir('/home/pjb/www/mus/beethoven/');
$jpg = $ARGV[$[].'.jpg';
$mp3 = $ARGV[$[].'.mp3';
$iden = `identify $jpg`;
$iden =~ /^.*JPEG (\d+)x(\d+).*$/;
$width = $1 ; $height = $2;
print "<A HREF=\"$mp3\">\n  <IMG ALIGN=\"left\" SRC=\"$jpg\" WIDTH=$width HEIGHT=$height> </A><BR>\n";

exit;

